{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'complaints-sec5.css' | asset_url | stylesheet_tag }}


<div class="inner-top-text">
  <h2>Flower Station Wedding Brochure 2022-2023</h2>
</div>

<slider-component class="slider-mobile-gutter slider-component-full-width slider-component-desktop scroll-trigger animate--slide-in">
  <div class="carousel-container">
    <ul
      id="Slider-{{ section.id }}"
      class="grid product-grid contains-card contains-card--product contains-card--standard grid--1-col-desktop grid--1-col-tablet-down slider slider--desktop slider--tablet grid--peek"
      role="list"
      aria-label="{{ 'general.slider.name' | t }}">
      <li
        id="Slide-{{ section.id }}-1"
        class="grid__item scroll-trigger animate--slide-in"
        data-cascadestyle="--animation-order: 1;">

        <div class="carousel-selected">

          {% if section.setting-comp-sec5-img1 != blank %}
            <img src="{{ section.settings.comp-sec5-img1}}" alt="Selected Image" />
          {% else %}
            <img src="{{ 'complaints-sec5-img.png' | asset_url }}" alt="Selected Image" />
          {% endif %}


        </div>
      </li>
      <li
        id="Slide-{{ section.id }}-2"
        class="grid__item scroll-trigger animate--slide-in"
        data-cascadestyle="--animation-order: 2;">
        <div class="carousel-selected">
          {% if section.setting-comp-sec5-img2 != blank %}
            <img src="{{ section.settings.comp-sec5-img2}}" alt="Selected Image" />
          {% else %}
            <img src="{{ 'complaints-sec5-img.png' | asset_url }}" alt="Selected Image" />
          {% endif %}

        </div>
      </li>
      <li
        id="Slide-{{ section.id }}-1"
        class="grid__item scroll-trigger animate--slide-in"
        data-cascadestyle="--animation-order: 1;">
        <div class="carousel-selected">
          {% if section.setting-comp-sec5-img3 != blank %}
            <img src="{{ section.settings.comp-sec5-img3}}" alt="Selected Image" />
          {% else %}
            <img src="{{ 'complaints-sec5-img.png' | asset_url }}" alt="Selected Image" />
          {% endif %}


        </div>
      </li>
    </ul>
  </div>

  <div class="carousel-arrows">
    <button
      type="button"
      class="arrow slider-button slider-button--prev"
      name="previous"
      aria-label="{{ 'general.slider.previous_slide' | t }}"
      aria-controls="Slider-{{ section.id }}">
      <svg
        class="icon-arrows"
        width="36"
        height="56"
        viewBox="0 0 36 56"
        fill="none"
        xmlns="http://www.w3.org/2000/svg">
        <path
          d="M33.2383 2.6L2.99838 27.8L33.2383 53"
          stroke="#000"
          stroke-width="5.03999"
          stroke-linecap="round"
          stroke-linejoin="round" />
      </svg>
    </button>
    <button
      type="button"
      class="arrow slider-button slider-button--next"
      name="next"
      aria-label="{{ 'general.slider.next_slide' | t }}"
      aria-controls="Slider-{{ section.id }}">
      <svg
        class="icon-arrows"
        width="37"
        height="56"
        viewBox="0 0 37 56"
        fill="none"
        xmlns="http://www.w3.org/2000/svg">
        <path
          d="M3.24219 2.6L33.4821 27.8L3.24219 53"
          stroke="#000"
          stroke-width="5.03999"
          stroke-linecap="round"
          stroke-linejoin="round" />
      </svg>

    </button>
  </div>

</slider-component>
<div class="inner-bottom-text">
  <p>
    {{ section.settings.complaint-sec5-text-body }}
  </p>
  <button>
    {{ section.settings.complaint-sec5-text-button }} &#8595</button>
</div>


