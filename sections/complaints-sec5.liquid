        "type": "image_picker",
        "id": "comp-sec5-img1",
        "label": "Select Slider Image 1"
      },
      {
        "type": "image_picker",
        "id": "comp-sec5-img2",
        "label": "Select Slider Image 2"
      }, {
        "type": "image_picker",
        "id": "comp-sec5-img3",
        "label": "Select Slider Image 3"
      }

    ]
  }
{% endschema %}