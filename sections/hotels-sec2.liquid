{{ 'hotels-sec2.css' | asset_url | stylesheet_tag }}

<slider-component class="slider-mobile-gutter slider-component-full-width slider-component-desktop scroll-trigger animate--slide-in">
  <div class="carousel-container">
    <ul
      id="Slider-{{ section.id }}"
      class="grid product-grid contains-card contains-card--product contains-card--standard grid--1-col-desktop grid--1-col-tablet-down slider slider--desktop slider--tablet grid--peek"
      role="list"
      aria-label="{{ 'general.slider.name' | t }}">
      <li
        id="Slide-{{ section.id }}-1"
        class="grid__item scroll-trigger animate--slide-in"
        data-cascadestyle="--animation-order: 1;">

        <div class="carousel-selected">

          {% if section.settings.hotel-slider-img1 != blank %}
            <img src="{{ section.settings.hotel-slider-img1 | img_url }}" alt="">
          {% else %}
            <img src="{{ 'crousal2.png' | asset_url }}" alt="">
          {% endif %}

        </div>
      </li>
      <li
        id="Slide-{{ section.id }}-2"
        class="grid__item scroll-trigger animate--slide-in"
        data-cascadestyle="--animation-order: 2;">
        <div class="carousel-selected">
          {% if section.settings.hotel-slider-img2 != blank %}
            <img src="{{ section.settings.hotel-slider-img2 | img_url }}" alt="">
          {% else %}
            <img src="{{ 'crousal2.png' | asset_url }}" alt="">
          {% endif %}

        </div>
      </li>
      <li
        id="Slide-{{ section.id }}-2"
        class="grid__item scroll-trigger animate--slide-in"
        data-cascadestyle="--animation-order: 2;">
        <div class="carousel-selected">
          {% if section.settings.hotel-slider-img3 != blank %}
            <img src="{{ section.settings.hotel-slider-img3 | img_url }}" alt="">
          {% else %}
            <img src="{{ 'crousal2.png' | asset_url }}" alt="">
          {% endif %}

        </div>
      </li>
      <li
        id="Slide-{{ section.id }}-2"
        class="grid__item scroll-trigger animate--slide-in"
        data-cascadestyle="--animation-order: 2;">
        <div class="carousel-selected">
          {% if section.settings.hotel-slider-img4 != blank %}
            <img src="{{ section.settings.hotel-slider-img4 | img_url }}" alt="">
          {% else %}
            <img src="{{ 'crousal2.png' | asset_url }}" alt="">
          {% endif %}

        </div>
      </li>
    </ul>
  </div>
  <div class="carousel-thumbnails">
    <button
      type="button"
      class="arrows-box-left slider-button slider-button--prev"
      name="previous"
      aria-label="{{ 'general.slider.previous_slide' | t }}"
      aria-controls="Slider-{{ section.id }}">
      <svg
        class="carousal-arrows-hotels"
        width="36"
        height="56"
        viewBox="0 0 36 56"
        fill="none"
        xmlns="http://www.w3.org/2000/svg">
        <path
          d="M33.2383 2.6L2.99838 27.8L33.2383 53"
          stroke="#FFC7C7"
          stroke-width="5.03999"
          stroke-linecap="round"
          stroke-linejoin="round" />
      </svg>
    </button>
    {% if section.settings.hotel-slider-img1 != blank %}
      <img
        class="thumbnail"
        src="{{ section.settings.hotel-slider-img1 | img_url }}"
        alt="">
    {% else %}
      <img
        class="thumbnail"
        src="{{ 'crousal2.png' | asset_url }}"
        alt="">
    {% endif %}
    {% if section.settings.hotel-slider-img2 != blank %}
      <img
        class="thumbnail"
        src="{{ section.settings.hotel-slider-img2 | img_url }}"
        alt="">
    {% else %}
      <img
        class="thumbnail"
        src="{{ 'crousal2.png' | asset_url }}"
        alt="">
    {% endif %}
    {% if section.settings.hotel-slider-img3 != blank %}
      <img
        class="thumbnail"
        src="{{ section.settings.hotel-slider-img3 | img_url }}"
        alt="">
    {% else %}
      <img
        class="thumbnail"
        src="{{ 'crousal2.png' | asset_url }}"
        alt="">
    {% endif %}

    {% if section.settings.hotel-slider-img4 != blank %}
      <img
        class="thumbnail"
        src="{{ section.settings.hotel-slider-img4 | img_url }}"
        alt="">
    {% else %}
      <img
        class="thumbnail"
        src="{{ 'crousal2.png' | asset_url }}"
        alt="">
    {% endif %}


    <!-- Add more images and their respective onclick functions here -->
    <button
      type="button"
      class="arrows-box-right slider-button slider-button--next"
      name="next"
      aria-label="{{ 'general.slider.next_slide' | t }}"
      aria-controls="Slider-{{ section.id }}">
      <svg
        class="carousal-arrows-hotels"
        width="37"
        height="56"
        viewBox="0 0 37 56"
        fill="none"
        xmlns="http://www.w3.org/2000/svg">
        <path
          d="M3.24219 2.6L33.4821 27.8L3.24219 53"
          stroke="#FFC7C7"
          stroke-width="5.03999"
          stroke-linecap="round"
          stroke-linejoin="round" />
      </svg>
    </button>
  </div>


</slider-component>



