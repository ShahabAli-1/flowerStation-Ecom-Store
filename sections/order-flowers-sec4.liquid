{{ 'order-flowers-sec4.css' | asset_url | stylesheet_tag }}


<div class="abt-sec9-container">
  <div class="abt-sec9-container-inner">
    <div class="sec9-inner-left">
      {% if section.settings.ord-sec4-img1 != blank %}
        <img
          class="sec9-img1"
          src="{{ section.settings.ord-sec4-img1 | img_url }}"
          alt="">
      {% else %}
        <img
          class="sec9-img1"
          src="{{'ord-sec4-pc-img2.png' | asset_url}}"
          alt="">
      {% endif %}

      {% if section.settings.ord-sec4-img2 != blank %}
        <img
          class="sec9-img2"
          src="{{ section.settings.ord-sec4-img2 | img_url }}"
          alt="">
      {% else %}
        <img
          class="sec9-img2"
          src="{{'ord-sec4-pc-img1.png' | asset_url}}"
          alt="">
      {% endif %}



    </div>
    <div class="sec9-inner-right">
      <h2>{{ section.settings.ord-sec4-title }}</h2>
      <p>
        {{ section.settings.ord-sec4-para-1 }}
      </p>
      <p>
        {{ section.settings.ord-sec4-para-2 }}
      </p>
      <p>
        {{ section.settings.ord-sec4-para-3 }}
      </p>
      <p>
        <strong>{{ section.settings.ord-sec4-para-4 }}</strong>
      </p>
    </div>
  </div>
</div>

