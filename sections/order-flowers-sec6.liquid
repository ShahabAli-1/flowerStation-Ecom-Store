{% endcomment %}<slider-component class="slider-mobile-gutter slider-component-full-width slider-component-desktop scroll-trigger animate--slide-in">
  <div class="carousel">
    <div class="carousel-container">
      <ul
        id="Slider-{{ section.id }}"
        class="grid product-grid contains-card contains-card--product contains-card--standard grid--1-col-desktop grid--1-col-tablet-down slider slider--desktop slider--tablet grid--peek"
        role="list"
        aria-label="{{ 'general.slider.name' | t }}">
        <li
          id="Slide-{{ section.id }}-1"
          class="grid__item scroll-trigger animate--slide-in"
          data-cascadestyle="--animation-order: 1;">
          <div class="carousel-item">
            <div class="carousal-image">

              {% if section.settings.ord-sec6-img1 != blank %}
                <img
                  class="carousal-sec6-img"
                  src="{{ section.settings.ord-sec6-img1 | img_url }}"
                  alt="">
              {% else %}
                <img
                  class="carousal-sec6-img"
                  src="{{ 'ord-flo-sec6-img.png' | asset_url }}"
                  alt="">
              {% endif %}


            </div>
            <div class="carousel-info">
              <p class="p-body-text">
                {{ section.settings.ord-sec6-review1-para }}
              </p>
              <h3>{{ section.settings.ord-sec6-review1-name }}</h3>
              <p class="p-small">{{ section.settings.ord-sec6-review1-name }}</p>
              <div class="carousel-dots">
                <button class="dot"></button>
                <button class="dot"></button>
              </div>
            </div>
          </div>

        </li>
        <li
          id="Slide-{{ section.id }}-2"
          class="grid__item scroll-trigger animate--slide-in"
          data-cascadestyle="--animation-order: 2;">
          <div class="carousel-item">
            <div class="carousal-image">

              {% if section.settings.ord-sec6-img2 != blank %}
                <img
                  class="carousal-sec6-img"
                  src="{{ section.settings.ord-sec6-img2 | img_url }}"
                  alt="">
              {% else %}
                <img
                  class="carousal-sec6-img"
                  src="{{ 'ord-flo-sec6-img.png' | asset_url }}"
                  alt="">
              {% endif %}

            </div>
            <div class="carousel-info">
              <p class="p-body-text">
                {{ section.settings.ord-sec6-review2-para }}
              </p>
              <h3>{{ section.settings.ord-sec6-review2-name }}</h3>
              <p class="p-small">{{ section.settings.ord-sec6-review2-email }}</p>
              <div class="carousel-dots">
                <button class="dot"></button>
                <button class="dot"></button>
              </div>
            </div>
          </div>
        </li>
      </ul>


      <div class="sliding-arrows">
        <button
          type="button"
          class="nav-btn icon slider-button slider-button--prev"
          name="previous"

          aria-label="{{ 'general.slider.previous_slide' | t }}"
          aria-controls="Slider-{{ section.id }}"
          id="prevBtn">
          <svg
            class="icon"
            width="12"
            height="19"
            viewBox="0 0 12 19"
            fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path
              d="M10.3164 1.65787L1.01641 9.46114L10.3164 17.2644"
              stroke="#FFC7C7"
              stroke-width="1.55"
              stroke-linecap="round"
              stroke-linejoin="round" />
          </svg>
        </button>

        <button
          type="button"
          class="nav-btn icon slider-button slider-button--next"
          name="next"
          aria-label="{{ 'general.slider.next_slide' | t }}"
          aria-controls="Slider-{{ section.id }}"
          id="nextBtn">
          <svg
            class="icon"
            width="22"
            height="34"
            viewBox="0 0 22 34"
            fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path
              d="M2 2L20 17L2 32"
              stroke="#FFC7C7"
              stroke-width="3"
              stroke-linecap="round"
              stroke-linejoin="round">
          </svg>
        </button>
      </div>

    </div>
  </div>
