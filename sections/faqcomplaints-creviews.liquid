{% schema %}
  {
    "name": "faqc-creviews",
    "settings": [
      {
        "type": "text",
        "id": "faqc-creviews",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "faqc-creviews-heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "faqc-creviews-desc",
        "label": "Description"
      },
      {
        "type": "collection",
        "id": "faqc-collection-creviews",
        "label": "Collection"
      }, {
        "type": "range",
        "id": "faqc-products_to_show",
        "min": 2,
        "max": 25,
        "step": 1,
        "default": 4,
        "label": "Products to show"
      }, {
        "type": "range",
        "id": "faqc-columns_desktop",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 3,
        "label": "Columns desktop"
      }, {
        "type": "checkbox",
        "id": "faqc-full_width",
        "label": "Full width",
        "default": true
      }, {
        "type": "checkbox",
        "id": "faqc-enable_desktop_slider",
        "label": "Enable desktop slider",
        "default": true
      }, {
        "type": "range",
        "id": "faqc-columns_mobile",
        "min": 1,
        "max": 5,
        "step": 1,
        "default": 1,
        "label": "Columns mobile"
      }, {
        "type": "checkbox",
        "id": "faqc-swipe_on_mobile",
        "default": true,
        "label": "Swipe on mobile"
      }
    ]
  }
{% endschema %}